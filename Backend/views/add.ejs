<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-black px-10 py-5 text-white">
    <h1>Create a new post</h1>
    <hr class="opacity-30 mt-3">
    <form action="/createpost" method="post" enctype="multipart/form-data">
        <input class="block w-1/3 px-3 py-2 border-2 mt-2 rounded-md" type="file" name="postimage">
        <input class="block w-1/3 px-3 py-2 border-2 mt-2 rounded-md    text-black" type="text" placeholder="Title" name="title">
        <textarea class="block w-1/3 px-3 py-2 border-2 mt-2 rounded-md text-black" type="text" placeholder="Description" name="description"></textarea>
        <input class="block w-1/3 px-3 py-2 mt-2 rounded-md bg-red-600" type="submit" value="Create Post" >
    </form>
</div>
<% include ./partials/footer.ejs %>