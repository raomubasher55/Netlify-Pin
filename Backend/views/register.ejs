<% include ./partials/header.ejs %>
  <div class="h-screen w-full bg-cover backdrop-blur-10"
    style="background-image: url('https://images.unsplash.com/photo-1524169358666-79f22534bc6e?q=80&w=1770&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');backdrop-filter: blur(10px);">
    <div class="bg-white mx-auto w-1/3 rounded-lg ">
      <div class="containerm py-4 mx-auto p-4">
        <div class="content text-center">
          <!-- Pinterest logo -->
          <img src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png" alt="Pin logo"
            class="img1 w-20 mx-auto mt-5">
          <p class="header text-3xl font-bold my-4">Create an account to see more</p>
          <!-- Form for registration -->
          <form action="/register" method="post">
            <input type="text" name="fullname" placeholder="Full Name"
              class="detail mb-4 rounded-md p-2 border border-gray-300 block w-full">
              <input type="email" name="email" placeholder="Email"
                class="detail mb-4 rounded-md p-2 border border-gray-300 block w-full">
              <input type="text" name="username" placeholder="Username"
                class="detail mb-4 rounded-md p-2 border border-gray-300 block w-full">
              <input type="number" name="contact" placeholder="Contact"
                class="detail mb-4 rounded-md p-2 border border-gray-300 block w-full">
              <input type="password" name="password" placeholder="Password"
                class="detail mb-4 rounded-md p-2 border border-gray-300 block w-full">
              <input type="submit"
                class="btn int py-2 px-4 bg-red-500 text-white rounded-md cursor-pointer block w-full"
                value="Register Account">
            </form>
            <!-- Forgot password link -->
            <a href="/forget" class="text-blue-500 block mb-4">Forgot your password?</a>
            <!-- OR divider -->
            <p class="or my-4 text-xl font-bold">OR</p>
            <!-- Buttons for social login -->
            <button class="btn fbk py-2 px-4 bg-blue-500 text-white rounded-md cursor-pointer mb-2 block w-full">
              <i class="fab fa-facebook fa-lg" style="color: white; padding-right: 10px"></i>Continue with Facebook
            </button>
            <button  class="btn ggl py-2 px-4 bg-yellow-500 text-black rounded-md cursor-pointer mb-4 block w-full">
              <i class="fab fa-google" style="color: black; padding-right: 10px"></i>Continue with Google
            </button>
            <!-- Footer -->
            <footer class="text-xs text-gray-600">
              <p>
                By continuing, you agree to Pinterest's
                <b class="font-bold">Terms of Service</b> and
                <b class="font-bold">Privacy Policy.</b>
              </p>
              <hr class="my-4 border-t border-gray-400">
              <a href="/login" class="text-blue-500 block">Already on Pinterest? Login</a>
            </footer>
        </div>
      </div>
    </div>
  </div>
  <% include ./partials/footer.ejs %>